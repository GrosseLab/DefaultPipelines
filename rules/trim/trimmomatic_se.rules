#############################################################################
#          Rules to trim single end fastq files.                            #
#                                                                           #
# Date: 17.02.2015                                                          #
#                                                                           #
#############################################################################

rule trimmomatic_se:
    input: fastqs = lambda wildcards: map( lambda f: "data/reads/raw/" + f, config["units"][wildcards.unit])
    output: "data/reads/filtered/{unit}_P1.fastq.gz",
    shell: "trimmomatic SE -phred33 "
           "{input.fastqs} "
           "{output} "
           "{config[trim_param]}"
