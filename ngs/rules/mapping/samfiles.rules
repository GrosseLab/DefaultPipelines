#############################################################################
#          Rules of the samtools pipeline.                                  #
#                                                                           #
# Date: 17.02.2015                                                          #
#                                                                           #
#############################################################################

rule bam_sort_coord:
    """Sort alignments by genomic position."""
    input: "{prefix}_name.bam"
    output: "{prefix}.bam"
    threads: 8
    shell: "samtools sort -@ {threads} -m 2G -o {output} {input}"

rule bam_sort_name:
    """Sort alignments by read name."""
    input: "{prefix}.bam"
    output: "{prefix}_name.bam"
    threads: 8
    shell: "samtools sort -n -@ {threads} -m 2G -o {output} {input}"

rule bam_index:
    """Creates BAM index."""
    input: "{prefix}.bam"
    output: "{prefix}.bam.bai"
    shell: "samtools index {input}"

rule fasta_index:
    """Creates Fasta index."""
    input: "{prefix}.fa"
    output: "{prefix}.fa.fai"
    shell: "samtools faidx {input}"
