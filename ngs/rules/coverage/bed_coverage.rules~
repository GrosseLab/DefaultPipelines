
rule target_coverage:
    """Compute per base coverage of sequenced regions."""
    input: bam = "results/mapping/{sample}.bam", 
           manifest = "/data/references/illumina/kits/trusight_cancer_manifest_a_pret_ext.bed"
    output: "results/coverage/{sample}.cov"
    shell: "bedtools coverage -split -d -abam {input.bam} -b {input.manifest} > {output}"